<?xml version="1.0" encoding="UTF-8"?>
<LLRPServerConfiguration xmlns="urn:havis:llrp:server:configuration:xsd:1">
	<defaults>
		<interfaces>
			<LLRP>
				<host>localhost</host>
				<port>4321</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<TCPReadBufferSize>1024</TCPReadBufferSize>
			</LLRP>
			<systemController>
				<host>localhost</host>
				<port>4321</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<reflection>
					<controllerClassName>havis.util.platform.impl.DefaultPlatform
					</controllerClassName>
				</reflection>
			</systemController>
			<RFC>
				<host>localhost</host>
				<port>1234</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<callbackTimeout>3000</callbackTimeout>
				<reflection>
					<controllerClassName>hugo</controllerClassName>
				</reflection>
			</RFC>
		</interfaces>
		<persistence>
			<times>
				<manual>true</manual>
				<afterChanges>false</afterChanges>
			</times>
			<groupId>
				<baseFormat>yyyy'_'MM'_'dd'T'HH'_'mm'_'ss'_'SSS'__'</baseFormat>
				<suffix>
					<serialNumber>true</serialNumber>
				</suffix>
			</groupId>
			<cleanUp>
				<times>
					<manual>true</manual>
					<afterFlush>false</afterFlush>
				</times>
			</cleanUp>
			<entities>
				<entity>
					<className>havis.llrpservice.xml.configuration.LLRPServerConfigurationType
					</className>
					<output>
						<file>
							<baseDir>../../../../../output/config</baseDir>
							<type>
								<XML>
									<encoding>UTF8</encoding>
								</XML>
							</type>
						</file>
					</output>
					<times>
						<manual>true</manual>
						<afterChanges>true</afterChanges>
					</times>
				</entity>
			</entities>
		</persistence>
	</defaults>
	<instanceConfigurations>
		<instanceConfigurationBaseDir>instances/default
		</instanceConfigurationBaseDir>
	</instanceConfigurations>
</LLRPServerConfiguration>
