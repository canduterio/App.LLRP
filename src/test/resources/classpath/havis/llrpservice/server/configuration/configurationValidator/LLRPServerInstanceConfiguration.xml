						<type>
							<JSON>
								<encoding>UTF8</encoding>
								<mixInClassName>havis.llrpservice.csc.llrp.json.LLRPJacksonMixIns
								</mixInClassName>
							</JSON>
						</type>
					</file>
				</output>
				<groupId>
					<baseFormat>yyyy'_'MM'_'dd'T'HH'_'mm'_'ss'_'SSS'__'</baseFormat>
				</groupId>
