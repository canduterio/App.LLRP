<?xml version="1.0" encoding="UTF-8"?>
<LLRPServerConfiguration xmlns="urn:havis:llrp:server:configuration:xsd:1">
	<defaults>
		<interfaces>
			<LLRP>
				<host>localhost</host>
				<port>4321</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<TCPReadBufferSize>1024</TCPReadBufferSize>
			</LLRP>
            <systemController>
                <host>localhost</host>
                <port>4321</port>
                <openCloseTimeout>3000</openCloseTimeout>
                <reflection>
                    <controllerClassName>havis.util.platform.impl.DefaultPlatform
                    </controllerClassName>
                </reflection>
            </systemController>
			<RFC>
				<host>localhost</host>
				<port>1234</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<callbackTimeout>3000</callbackTimeout>
				<reflection>
					<controllerClassName>hugo</controllerClassName>
				</reflection>
			</RFC>
		</interfaces>
		<persistence>
			<times>
				<manual>false</manual>
				<afterChanges>false</afterChanges>
			</times>
			<groupId>
				<baseFormat>yyyy</baseFormat>
				<suffix>
					<serialNumber>true</serialNumber>
				</suffix>
			</groupId>
			<cleanUp>
				<times>
					<manual>true</manual>
					<afterFlush>true</afterFlush>
				</times>
				<maxCreationDateInterval>1</maxCreationDateInterval>
			</cleanUp>
			<entities>
				<entity>
					<className>havis.llrpservice.xml.configuration.LLRPServerConfigurationType
					</className>
					<output>
						<file>
							<baseDir>serverConfig</baseDir>
							<type>
								<XML>
									<encoding>UTF8</encoding>
								</XML>
							</type>
						</file>
					</output>
					<times>
						<manual>true</manual>
						<afterChanges>false</afterChanges>
					</times>
					<groupId>
						<baseFormat>MM</baseFormat>
						<suffix>
							<serialNumber>true</serialNumber>
						</suffix>
					</groupId>
					<cleanUp>
						<times>
							<manual>false</manual>
							<afterFlush>true</afterFlush>
						</times>
						<maxCreationDateInterval>2</maxCreationDateInterval>
					</cleanUp>
				</entity>
			</entities>
		</persistence>
	</defaults>
  <instanceConfigurations>
    <instanceConfigurationBaseDir>instances/default</instanceConfigurationBaseDir>
  </instanceConfigurations>
	<persistence>
		<entities>
			<entity>
				<className>havis.llrpservice.xml.configuration.LLRPServerConfigurationType
				</className>
				<output>
					<file>
						<baseDir>serverConfig_overwritten</baseDir>
						<type>
							<XML>
								<encoding>UTF8</encoding>
							</XML>
						</type>
					</file>
				</output>
				<times>
					<manual>false</manual>
					<afterChanges>true</afterChanges>
				</times>
				<groupId>
					<baseFormat>MM_overwritten</baseFormat>
					<suffix>
						<serialNumber>true</serialNumber>
					</suffix>
				</groupId>
				<cleanUp>
					<times>
						<manual>false</manual>
						<afterFlush>true</afterFlush>
					</times>
					<maxCreationDateInterval>23</maxCreationDateInterval>
				</cleanUp>
			</entity>
		</entities>
	</persistence>
</LLRPServerConfiguration>
