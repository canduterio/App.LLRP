<?xml version="1.0" encoding="UTF-8"?>
<LLRPServerConfiguration xmlns="urn:havis:llrp:server:configuration:xsd:1">
	<defaults>
		<interfaces>
			<LLRP>
				<host>localhost</host>
				<port>4321</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<TCPReadBufferSize>1024</TCPReadBufferSize>
			</LLRP>
            <systemController>
                <host>localhost</host>
                <port>4321</port>
                <openCloseTimeout>3000</openCloseTimeout>
                <reflection>
                    <controllerClassName>havis.util.platform.impl.DefaultPlatform
                    </controllerClassName>
                </reflection>
            </systemController>
			<RFC>
				<host>localhost</host>
				<port>1234</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<callbackTimeout>3000</callbackTimeout>
				<reflection>
					<controllerClassName>hugo</controllerClassName>
				</reflection>
			</RFC>
		</interfaces>
		<persistence>
			<times>
				<manual>true</manual>
				<afterChanges>false</afterChanges>
			</times>
			<groupId>
				<baseFormat>yyyy'_'MM'_'dd'T'HH'_'mm'_'ss'_'SSS'__'</baseFormat>
				<suffix>
					<serialNumber>true</serialNumber>
				</suffix>
			</groupId>
			<cleanUp>
				<times>
					<manual>true</manual>
					<afterFlush>false</afterFlush>
				</times>
			</cleanUp>
			<entities>
				<entity>
					<className>havis.llrpservice.xml.configuration.LLRPServerConfigurationType
					</className>
					<output>
						<file>
							<baseDir>../../../../../output/config</baseDir>
							<type>
								<XML>
									<encoding>UTF8</encoding>
								</XML>
							</type>
						</file>
					</output>
					<times>
						<manual>true</manual>
						<afterChanges>true</afterChanges>
					</times>
				</entity>

				<entity>
					<className>havis.llrpservice.server.persistence._TestClassTest
					</className>
					<output>
						<file>
							<baseDir>../../../../../output/test</baseDir>
							<type>
								<JSON>
									<encoding>UTF8</encoding>
								</JSON>
							</type>
						</file>
					</output>
				</entity>

				<entity>
					<className>java.lang.Integer
					</className>
					<output>
						<file>
							<baseDir>../../../../../output/Integer</baseDir>
							<type>
								<javaBinary />
							</type>
						</file>
					</output>
					<times>
						<manual>true</manual>
						<afterChanges>true</afterChanges>
					</times>
					<cleanUp>
						<times>
							<manual>true</manual>
							<afterFlush>false</afterFlush>
						</times>
						<maxCreationDateInterval>
							0
						</maxCreationDateInterval>

					</cleanUp>
				</entity>

				<entity>
					<className>java.lang.Long
					</className>
					<output>
						<file>
							<baseDir>../../../../../output/Long</baseDir>
							<type>
								<javaBinary />
							</type>
						</file>
					</output>
					<times>
						<manual>false</manual>
						<afterChanges>false</afterChanges>
					</times>
					<cleanUp>
						<times>
							<manual>true</manual>
							<afterFlush>true</afterFlush>
						</times>
						<maxCreationDateInterval>
							0
						</maxCreationDateInterval>

					</cleanUp>
				</entity>

			</entities>
		</persistence>
	</defaults>
  <instanceConfigurations>
    <instanceConfigurationBaseDir>instances/default</instanceConfigurationBaseDir>
  </instanceConfigurations>
</LLRPServerConfiguration>
