<?xml version="1.0" encoding="UTF-8"?>
<LLRPServerConfiguration xmlns="urn:havis:llrp:server:configuration:xsd:1"
	xmlns:c="urn:havis:llrp:server:configuration:xsd:1">
	<defaults>
		<interfaces>
			<LLRP>
				<host>0.0.0.0</host>
				<port>5084</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<TCPReadBufferSize>1024</TCPReadBufferSize>
			</LLRP>
			<systemController>
				<host>localhost</host>
				<port>4321</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<reflection>
					<controllerClassName>havis.llrpservice.server.stub.SystemControllerStub
					</controllerClassName>
				</reflection>
			</systemController>
			<RFC>
				<host>localhost</host>
				<port>1234</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<callbackTimeout>3000</callbackTimeout>
				<reflection>
					<controllerClassName>havis.llrpservice.server.stub.RFDeviceStub
					</controllerClassName>
				</reflection>
			</RFC>
			<GPIO>
				<host>localhost</host>
				<port>8765</port>
				<openCloseTimeout>3000</openCloseTimeout>
				<reflection>
					<controllerClassName>havis.llrpservice.server.stub.IODeviceStub
					</controllerClassName>
				</reflection>
			</GPIO>
		</interfaces>
		<persistence>
			<times>
				<manual>true</manual>
				<afterChanges>false</afterChanges>
			</times>
			<groupId>
				<baseFormat>yyyy'_'MM'_'dd'T'HH'_'mm'_'ss'_'SSS'__'</baseFormat>
				<suffix>
					<serialNumber>true</serialNumber>
				</suffix>
			</groupId>
			<cleanUp>
				<times>
					<manual>true</manual>
					<afterFlush>true</afterFlush>
				</times>
				<!-- 10 days -->
				<maxCreationDateInterval>864000</maxCreationDateInterval>
			</cleanUp>
		</persistence>
	</defaults>
	<instanceConfigurations>
		<instanceConfigurationBaseDir>instances/default
		</instanceConfigurationBaseDir>
	</instanceConfigurations>
	<persistence>
		<entities>
			<entity>
				<className>havis.llrpservice.xml.configuration.LLRPServerConfigurationType
				</className>
				<output>
					<file>
						<!-- conf/havis-llrpservice -->
						<baseDir>../../var/lib/havis-llrpservice/repository/LLRPServerConfiguration
						</baseDir>
						<type>
							<XML>
								<encoding>UTF8</encoding>
							</XML>
						</type>
					</file>
				</output>
				<times>
					<manual>true</manual>
					<afterChanges>true</afterChanges>
				</times>
			</entity>
		</entities>
	</persistence>
</LLRPServerConfiguration>
